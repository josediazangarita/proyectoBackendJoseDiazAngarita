<div>
    <h1>Lista de Usuarios</h1>

    <table class="usersTable">
        <thead>
            <tr>
                <th>ID</th>
                <th>Email</th>
                <th>Rol</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            {{#each users}}
            <tr>
                <td>{{this._id}}</td>
                <td>{{this.email}}</td>
                <td>{{this.role}}</td>
                <td>
                    <button class="toggle-role-btn" data-user-id="{{this._id}}" data-user-role="{{this.role}}">
                        Cambiar Rol
                    </button>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    <div id="resultMessage"></div>
</div>

<script src="/js/toggleUserRole.js"></script>